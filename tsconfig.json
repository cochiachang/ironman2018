{
    "files": [
        "src/*.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": false,
        "removeComments": true,
        "noImplicitAny": false,
        "rootDir": "src/",
        "lib": [ "es6", "dom" ],
        "allowSyntheticDefaultImports": true,
        "typeRoots": [ "node_modules/@types" ],
        "types": ["jquery","angular","pixi"]
    }
}